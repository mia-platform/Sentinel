{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "output": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "stdout"
                ]
              }
            },
            "required": [
              "type"
            ]
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "file"
                ]
              },
              "file": {
                "type": "object",
                "properties": {
                  "path": {
                    "type": "string"
                  }
                },
                "required": [
                  "path"
                ]
              }
            },
            "required": [
              "type"
            ]
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "webhook"
                ]
              },
              "webhook": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string"
                  },
                  "authentication": {
                    "type": "object",
                    "properties": {
                      "secret": {
                        "$ref": "#/definitions/secret"
                      },
                      "headerName": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "required": [
              "type"
            ]
          }
        ]
      },
      "minItems": 1,
      "maxItems": 1
    },
    "monitor": {
      "type": "object",
      "properties": {
        "interval": {
          "type": "number"
        },
        "filters": {
          "type": "object",
          "properties": {
            "whitelist": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1,
              "uniqueItems": true
            },
            "blacklist": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1,
              "uniqueItems": true
            },
            "users": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1,
              "uniqueItems": true
            }
          },
          "additionalProperties": false,
          "anyOf": [
            {
              "required": [
                "whitelist"
              ]
            },
            {
              "required": [
                "blacklist"
              ]
            },
            {
              "required": [
                "users"
              ]
            }
          ],
          "not": {
            "allOf": [
              {
                "required": [
                  "whitelist"
                ]
              },
              {
                "required": [
                  "blacklist"
                ]
              }
            ]
          }
        }
      },
      "required": [
        "interval"
      ]
    },
    "server": {
      "type": "object",
      "properties": {
        "port": {
          "type": "number"
        }
      }
    },
    "advanced": {
      "type": "object",
      "properties": {
        "debug": {
          "type": "boolean"
        },
        "omitScanning": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "output",
    "monitor",
    "server",
    "advanced"
  ],
  "definitions": {
    "secret": {
      "type": "object",
      "properties": {
        "fromEnv": {
          "type": "string"
        },
        "fromFile": {
          "type": "string"
        }
      }
    }
  }
}